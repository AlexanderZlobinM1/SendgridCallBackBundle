{% block _config_sendgridcallback_config_widget %}
    <h4 class="fw-sb mt-48 mb-xs">{{ 'sendgrid_callback.config.title'|trans }}</h4>
    <p class="text-muted mb-md">{{ 'sendgrid_callback.config.subtitle'|trans }}</p>
    <div class="row">
        <div class="panel panel-default mb-md">
            <div class="panel-body">
                <div class="row">
                    {% for f in form.children %}
                        <div class="col-xs-12">
                            {{ form_row(f) }}
                        </div>
                    {% endfor %}
                </div>
                <hr />
                <div style="display:flex;align-items:center;gap:10px;">
                    <img src="{{ asset('plugins/SendgridCallbackBundle/Assets/images/salessnap-author-logo.svg') }}" alt="Sales Snap" style="width:28px;height:28px;" />
                    <div class="text-muted">
                        <span><strong>{{ 'sendgrid_callback.about.company'|trans }}</strong>: Sales Snap</span>
                        <span class="ml-sm"><strong>{{ 'sendgrid_callback.about.author'|trans }}</strong>: Alexander Zlobin</span>
                        <span class="ml-sm"><strong>{{ 'sendgrid_callback.config.version'|trans }}</strong>: 1.3.0</span>
                        <div>{{ 'sendgrid_callback.about.copyright'|trans }}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
